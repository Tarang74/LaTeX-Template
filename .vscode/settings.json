{
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.intellisense.file.base": "both",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.build.forceRecipeUsage": false,
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.formatting.latexindent.path": "path/to/latexindent.exe",
    "latex-workshop.formatting.latexindent.args": [
        "-c",
        "%DIR%/Debug/",
        "%TMPFILE%",
        "-m",
        "-l",
        "path/to/latexindent.yaml",
        "-w"
    ],
    "latex-workshop.linting.chktex.convertOutput.column.chktexrcTabSize": 4,
    "latex-workshop.message.error.show": false
}
